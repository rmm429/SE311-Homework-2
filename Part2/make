echo -e "\nMoving into input dir..."
cd input
echo "Making scripts executable..."
chmod +x compile
chmod +x run
echo -e "Compiling input...\n"
source compile

echo -e "\nMoving into remover dir..."
cd ../remover
echo "Making scripts executable..."
chmod +x compile
chmod +x run
echo -e "Compiling remover...\n"
source compile

echo -e "\nMoving into shifter dir..."
cd ../shifter
echo "Making scripts executable..."
chmod +x compile
chmod +x run
echo -e "Compiling shifter...\n"
source compile

echo -e "\nMoving into sorter dir..."
cd ../sorter
echo "Making scripts executable..."
chmod +x compile
chmod +x run
echo -e "Compiling sorter...\n"
source compile

echo -e "\nMoving into output dir..."
cd ../output
echo "Making scripts executable..."
chmod +x compile
chmod +x run
echo -e "Compiling output...\n"
source compile

echo -e "\nMoving to root dir..."
cd ..
echo "Making root scripts executable..."
chmod +x run_input
chmod +x run_remover
chmod +x run_shifter
chmod +x run_sorter
chmod +x run_output

echo -e "\nDone!"